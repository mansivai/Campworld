<%- include("../partials/header") %>
<div class="container">
	<%if(currentUser && user === null){%>
	   
		<img src="https://media2.giphy.com/media/14uQ3cOFteDaU/giphy.gif">
		User not found
		<a href="/campgrounds">Go back to Campgrounds</a>
	
	<%}else{%>
	<div class="row text-center">
		<div class="col-md-3">
			<div class="thumbnail">
				<img src="<%= user.avatar%>" alt="Profile image">
				<div class="caption"> <h3>
					<%= user.username%>
					</h3>
				</div>
			</div>
				<p>
			     Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. 
				</p>
			
		</div>
		<div class="col-md-9">
			<% campground.forEach(function(campground){ %>
				<div class="col-md-3 col-sm-6" >
					<div class="thumbnail">
						<img src="<%= campground.image %>" >
						<div class="caption">
							<h3><%= campground.name%></h3>
						</div>
						<p>
							<a class="btn btn-primary" href="/campgrounds/<%= campground._id %>" >More info</a>
						</p>

					</div>
				</div>
				<% }) %>
		</div>
	</div>
	<%}%>
</div>

<%- include("../partials/footer") %>