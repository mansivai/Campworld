<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		
	
	<h2 style="text-align:center">
		 Add a new C@MPGROUND below 
	</h2>
		<div style="width: 30%; margin: 25px auto">
			<form action="/campgrounds" method="post">
				<div class="form-group">
					<label for="fname">Destination: </label>
					<input class="form-control" id="fname" type="text" placeholder="Name" name="name"  required>
				</div>
				<div class="form-group">
					<label  for="img">Image url:</label>
					<input class= "form-control" id="img" type="text" placeholder="Image url" name="image" required >
				</div>
				
				<div class="form-group">
					<label  for="desc">Description:</label>
					<input class= "form-control" id="desc" type="text" placeholder="Description" name="description" required>
				</div>
				<div class="form-group">
					<label  for="price">Price/night($):</label>
					<input class= "form-control" id="price" type="number" placeholder="Price($)/night" name="price" min="0.01" step="0.01">
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit
					</button>
				</div>
			</form>
			<a href="/campgrounds">GO BACK</a>
		</div>
		
	</div>
</div>

<%- include("../partials/footer") %>