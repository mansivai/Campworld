<h1></h1>
<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		
	
	<h2 style="text-align:center">
		Welcome to the edit form
	</h2>
		<div style="width: 30%; margin: 25px auto">
			<form action="/campgrounds/<%= campground._id%>?_method=PUT" method="post">
				<div class="form-group">
					<label for="fname">Destination: </label>
					<input class="form-control" id="fname" type="text" placeholder="Name" name="campground[name]"  value="<%= campground.name %>">
				</div>
				<div class="form-group">
					<label  for="img">Image url:</label>
					<input class= "form-control" id="img" type="text" placeholder="Image url" name="campground[image]" value="<%= campground.image %>" >
				</div>
				
					<div class="form-group">
					<label  for="desc">Description:</label>
					<input class= "form-control" id="desc" type="text" placeholder="description" name="campground[description]" value=" <%-campground.description %> ">
				</div>
				
				<div class="form-group">
					<label  for="price">Price/night($):</label>
					<input class= "form-control" id="price" type="number"  name="campground[price]" value="<%= campground.price%>" min="0.01" step="0.01">
				</div>
				
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Update!!
					</button>
				</div>
			</form>
			<a href="/campgrounds/<%= campground._id%>">GO BACK</a>
		</div>
		
	</div>
</div>

<%- include("../partials/footer") %>